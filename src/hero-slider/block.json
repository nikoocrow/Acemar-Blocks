{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "acemar/hero-slider",
  "title": "Hero Slider",
  "category": "acemar",
  "icon": "slides",
  "description": "Slider hero con contenido personalizable",
  "keywords": ["hero", "slider", "banner"],
  "version": "1.0.0",
  "textdomain": "acemar-blocks",
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  },
  "attributes": {
    "slides": {
      "type": "array",
      "default": [
        {
          "id": 1,
          "mediaType": "image",
          "imageUrl": "",
          "imageId": null,
          "videoUrl": "",
          "alignment": "center"
        }
      ]
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}